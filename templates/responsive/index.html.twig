{% extends 'base.html.twig' %}

{% block title %}Responsive index{% endblock %}

{% block body %}
    <h1>Responsive index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for responsive in responsives %}
            <tr>
                <td>{{ responsive.id }}</td>
                <td>{{ responsive.image }}</td>
                <td>{{ responsive.updatedAt ? responsive.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('responsive_show', {'id': responsive.id}) }}">show</a>
                    <a href="{{ path('responsive_edit', {'id': responsive.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('responsive_new') }}">Create new</a>
{% endblock %}
