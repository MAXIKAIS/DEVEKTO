<form method="post" action="{{ path('responsive_delete', {'id': responsive.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ responsive.id) }}">
    <button class="btn">Delete</button>
</form>
